<?xml version="1.0" ?>
<sdf version="1.6">
    <model name="conveyor_belt">
      <!-- Fixed frame that can be used to refer to the belt's global pose -->
      <model name="conveyor_belt_fixed">
        <static>true</static>
        <link name="link">
          <visual name="visual">
            <geometry>
              <mesh>
                <scale>1 1 1</scale>
                <uri>model://conveyor_belt/meshes/conveyor.dae</uri>
              </mesh>
            </geometry> 
	        </visual>
          <collision name="collision">
            <geometry>
              <mesh>
                <scale>1 1 1</scale>
                <uri>model://conveyor_belt/meshes/conveyor_nobase.dae</uri>
              </mesh>
            </geometry> 
	        </collision>
	      </link>
      </model>

      <!-- Moving component that extends and resets a prismatic joint -->
      <model name="conveyor_belt_moving">
        <allow_auto_disable>0</allow_auto_disable>
        <static>false</static>
        <pose>0 0 0.75 0 0 -1.57079</pose>
        
        <link name="belt">
          <pose>-0.2 0 0 0 0 0</pose>
          <inertial>
            <inertia>
              <ixx>3.8185</ixx>
              <ixy>0</ixy>
              <ixz>0</ixz>
              <iyy>1781.5</iyy>
              <iyz>0</iyz>
              <izz>1784.72</izz>
            </inertia>
            <mass>100</mass>
          </inertial>

          <!-- Visual for debugging -->
          <!--
          <visual name="belt_visual">
            <geometry>
              <box>
                <size>9 0.42 .25</size>
              </box>
            </geometry>
          </visual>
          -->

          <collision name="belt_collision">
            <geometry>
              <box>
                <size>9 0.42 .25</size>
              </box>
            </geometry>
            <surface>
              <friction>
                <ode>
                  <mu>1.0</mu>
                  <mu2>1.0</mu2>
                </ode>
                <torsional>
                  <coefficient>1000.0</coefficient>
                  <patch_radius>0.1</patch_radius>
                </torsional>
              </friction>
            </surface>
          </collision>
        </link>
      </model>

      <joint name="belt_joint" type="prismatic">
        <parent>conveyor_belt_fixed::link</parent>
        <child>conveyor_belt_moving::belt</child>
        <axis>
          <xyz>1 0 0</xyz>
          <limit>
            <lower>0</lower>
            <upper>0.4</upper>
          </limit>
        </axis>
      </joint>

      <plugin filename="libconveyor_belt_plugin.so" name="conveyor_belt_plugin">
        <ros>
          <namespace></namespace>
        </ros>
        <max_velocity>0.2</max_velocity>
        <publish_rate>10</publish_rate>
      </plugin>
    </model>
</sdf>
